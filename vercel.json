{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://sabjimate.onrender.com/api/:path*" },
    { "source": "/admin/:path*", "destination": "/admin.html" },
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/driver/:path*", "destination": "/driver.html" },
    { "source": "/driver", "destination": "/driver.html" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}