{
  "name": "sabzimate-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client",
    "packages/common"
  ],
  "scripts": {
  "check:client": "tsc --noEmit",
  "check:server": "npm run check --workspace=sabzimate-server",
  "check": "npm run check:client && npm run check:server",
  "dev:server": "npm run dev --workspace=sabzimate-server",
  "dev:web": "vite",
  "dev": "concurrently \"npm:dev:server\" \"npm:dev:web\" --names \"API,WEB\" --prefix-colors \"bgRed.bold,bgBlue.bold\"",
  "db:migrate": "npm run migrate --workspace=sabzimate-server",
  "db:seed": "npm run seed --workspace=sabzimate-server",
  "test": "vitest",
  "test:ui": "vitest --ui",
  "cypress:open": "cypress open",
  "build": "npm run build --workspace=sabzimate-server && vite build",
  "start:prod": "npm run build && pm2 start ecosystem.config.js --env production",
  "stop:prod": "pm2 stop ecosystem.config.js && pm2 delete ecosystem.config.js",
  "git:push": "git add . && git commit -m \"update\" && git push --set-upstream origin main"

},

  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/leaflet": "^1.9.12",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cypress": "^13.11.0",
    "jsdom": "^24.1.0",
    "pm2": "^5.4.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^7.1.9",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "idb": "^8.0.0",
    "jwt-decode": "^4.0.0",
    "leaflet": "^1.9.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "5.0.8"
  }
}